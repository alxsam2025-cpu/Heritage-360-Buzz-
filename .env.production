# Production Environment Variables for Heritage 360 Buzz System
NODE_ENV=production
PORT=5000

# Database Configuration (MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/heritage360buzz?retryWrites=true&w=majority

# JWT Secret (Generate a strong secret)
JWT_SECRET=heritage360buzz_super_secret_production_key_2024_change_this
JWT_EXPIRE=30d

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=notifications@heritage360buzz.com
EMAIL_PASS=your_app_password

# Currency Settings
HOTEL_CURRENCY=USD
RESTAURANT_CURRENCY=GHS
PUB_CURRENCY=GHS

# Business Settings
BUSINESS_NAME=Heritage 360 Buzz
BUSINESS_ADDRESS=Accra, Ghana
BUSINESS_PHONE=+233-XXX-XXXXX
BUSINESS_EMAIL=info@heritage360buzz.com

# Default Room Rates (USD)
DOUBLE_ROOM_RATE=40
EXECUTIVE_ROOM_RATE=60
