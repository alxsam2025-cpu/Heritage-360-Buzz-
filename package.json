{
  "name": "heritage-360-buzz",
  "version": "1.0.0",
  "description": "Comprehensive hotel, restaurant, and pub management system",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "vercel-build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "seed": "node server/utils/seeder.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "cd client && npm install"
  },
  "keywords": [
    "hotel",
    "restaurant",
    "pub",
    "management",
    "accounting",
    "booking",
    "pos"
  ],
  "author": "Heritage 360 Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
}
